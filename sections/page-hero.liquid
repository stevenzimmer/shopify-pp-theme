<section class="relative bg-pp-indigo overflow-hidden">
  <div class="relative inset-0 mx-auto mb-12 flex h-full max-w-7xl justify-center md:absolute md:mb-0 md:justify-end">
    <div class="page-hero-bg relative -mx-12 sm:-mx-0 ">
      {% if section.settings.background_image %}
        {% render 'product-media', media: section.settings.background_image %}
      {% else %}
        <img
          class="h-full w-full object-cover object-center"
          src="https://cdn.shopify.com/s/files/1/0671/5975/3003/files/pp-hero.png?v=1711490025"
          alt="Page Hero Background Image"
          width="700"
          height="500"
        >
      {% endif %}
      
    </div>
  </div>

        <div class="lg:pp-hidden absolute inset-0 h-full w-0 bg-gradient-to-r from-pp-indigo via-pp-indigo to-transparent md:w-full">&nbsp;</div>
  <div class="container relative pb-12 md:py-16">
    <div class="w-full md:w-3/4 lg:w-1/2 xl:w-1/2">
    
      <h1 class="text-white font-bold">{{ section.settings.h1 }}</h1>
      <p class="my-3 text-lg font-bold text-white">{{ section.settings.subtext }}</p>
      {% if section.settings.paragraph %}
        <p class="mb-6">
          {{ section.settings.paragraph }}
        </p>
      {% endif %}

      <a href="{{ routes.all_products_collection_url }}" class="btn border-pp-lime bg-pp-lime text-pp-stone">
        {{- section.settings.button_text -}}
      </a>
    </div>
  </div>


  <div class="py-2 w-full bg-pp-grey-1 pp-hidden md:block">&nbsp;</div>
</section>

{% style %}
  .page-hero-bg img {
    width: 100%;
    height: 100%;
    border-radius: 0;
    background-color: transparent;
  }
{% endstyle %}
{% schema %}
{
  "name": "Page Hero",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label"
    },
    {
      "type": "text",
      "id": "h1",
      "label": "H1 Text"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext"
    },
    {
      "type": "text",
      "id": "paragraph",
      "label": "Paragraph Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ]
}
{% endschema %}
