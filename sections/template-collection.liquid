<div class="container relative pb-20 pt-4">
  <div class="mb-6 flex flex-col-reverse flex-wrap items-center justify-end lg:flex-row">
    <div class="mb-3 w-full lg:mb-0 lg:w-1/2">
      <h1 class="text-bp-teal-dark mb-3 text-4xl md:text-5xl">{{ section.settings.title }}</h1>
      <p class="text-lg font-semibold text-pp-heading">
        {{ section.settings.paragraph }}
      </p>
    </div>
    <div class="w-full lg:w-1/2">
      <div>
        {% if section.settings.texture %}
          {% render 'product-media', media: section.settings.texture %}

        {% else %}
          <img
            src="https://cdn.shopify.com/s/files/1/0671/5975/3003/files/collection-hero.png?v=1711489588"
            alt="{{ section.settings.title }} texutre"
            class="w-full"
            width="390"
            height="130"
          >
        {% endif %}
      </div>
    </div>
  </div>
  <div class="-mx-3 flex flex-wrap">
    {% for product in collection.products %}
      <div class="mb-6 w-full px-3 sm:w-1/2 lg:w-1/3">
        {% render "product-card" | product: product %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Shop CGM Cover Patches"
    },
    {
      "type": "image_picker",
      "id": "texture",
      "label": "Texture"
    },
    {
      "type": "text",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "For Dexcom, Freestyle Libre, Medatronic Guardian, and Omnipod Monitors"
    }
  ]
}
{% endschema %}
